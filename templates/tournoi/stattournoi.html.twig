

{% extends 'base-back.html.twig' %}



{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="p-4 border-bottom bg-light">
                            <h4 class="card-title mb-0">Bar Chart</h4>
                        </div>
                        <div class="card-body">
                                <canvas id="tournoi"  style="height:250px"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="p-4 pr-5 border-bottom bg-light d-flex justify-content-between">
                            <h4 class="card-title mb-0">Pie chart</h4>
                            <id id="pie-chart-legend" class="mr-4"></id>
                        </div>
                        <div class="card-body d-flex">
                                <canvas id="tournois" style="height:130px"></canvas>
                        </div>
                    </div>
                </div>


    </div>
    </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous"></script>

    <script>

        var pr = document.querySelector("#tournoi")
        let graph = new Chart(pr, {
                type: "bar",
                data: {
                    labels: {{ nom_tour  | raw }},
                    datasets: [{
                        label: ['Tournoi en fonction de nbr joueur '],
                        data: {{ nbr_joueur| raw }},
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1

                    }]
                },
            }
        )


        let pr1 = document.querySelector("#tournois")
        let graph1 = new Chart(pr1, {
            type: "pie",
            data: {
                labels: {{ nom_tour  | raw }},
                datasets: [{
                    label: ['Repartition par nbr joueur'],
                    data: {{  nbr_joueur| raw }},

                    backgroundColor: ['pink', 'blue', 'green', 'yellow','black','brown']
                }]

            }
        })

    </script>
{% endblock %}