{% extends 'base-back.html.twig' %}

{% block title %}Hello ActualitesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    {% for i in actualites %}
        <tr>
            <td>

                {{ i.nomact }}
                <br>
                {{ i.image }}
                <br>
                {{ i.Description }}


            </td>
            <td>
                <a href="{{ path('deleteact',{'id':i.id}) }} "  class="badge badge-outline-danger">supprimer</a>
                <a href="{{ path('updateact',{'id':i.id}) }} "  class="badge badge-outline-danger">modifier</a>

            </td>
        </tr>
    {% endfor %}


{% endblock %}
