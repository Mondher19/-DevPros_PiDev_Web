{% extends 'base-back.html.twig' %}

{% block title %}Hello ActualitesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <table class="table">
        <thead>
        <tr>

            <th scope="col">Actualites</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">Cat√©gorie</th>
        </tr>
        </thead>
    {% for i in actualites %}

        <tbody>
        <tr>

            <td>{{ i.nom }}</td>
            <td><a><img height="50" width="50" src="{{ i.image }}"></a></td>
            <td>{{ i.Description }}</td>
            <td>{{ i.categorie }}</td>
            <td> <a href="{{ path('updateact',{'id':i.id}) }}  "  <button type="button" class="btn btn-success">Modifier</button></a></td>
            <td>  <a href=" {{ path('deleteact',{'id':i.id}) }} " <button type="button" class="btn btn-danger">Supprimer</button></a></td>

        </tr>
        </tbody>

    {% endfor %}

    </table>

    <td>  <a href="{{ path('addactualites') }} " <button type="button" class="btn btn-primary">Ajouter</button></a></td>

    {{ knp_pagination_render(actualites) }}
{% endblock %}
